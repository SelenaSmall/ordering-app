{% extends 'base.html.twig' %}
{% trans_default_domain 'OrderBundle' %}

{% block title %}{{ 'view.list.title'|trans }}{% endblock title %}

{% block header %}<h1>{{ 'view.list.title'|trans }}</h1>{% endblock %}

{% block content %}
    <table class="table table-bordered table-striped table-responsive">
        <thead>
            <tr>
                <th>{{ 'entity.order.name'|trans }}</th>
                <th>{{ 'entity.order.createdAt'|trans }}</th>
                <th></th>
            </tr>
        </thead>
        <tbody>
{% for order in orders %}
            <tr>
                <td>{{ order.name }}</td>
                <td>{{ order.createdAt|date('d/m/Y g:ia') }}</td>
                <td><a class="btn btn-default btn-xs" href="{{ url('OrderBundle:view', {uuid: order.uuid}) }}">{{ 'view.list.view_order'|trans }}</a></td>
            </tr>
{% endfor %}
        </tbody>
    </table>
{% endblock content %}